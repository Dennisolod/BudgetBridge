<!-- WORK IN PROGRESS -->
<BorderPane stylesheets="@style.css" fx:controller="groupid.ProfileController" xmlns:fx="http://javafx.com/fxml/1" styleClass="background">
   <top>
      <VBox alignment="CENTER">
         <BorderPane.margin>
            <Insets top="20" right="20" bottom="20" left="20"/>
         </BorderPane.margin>
         <HBox spacing="15" alignment="TOP_LEFT">
            <HBox.margin>
               <Insets top="0" right="50" bottom="0" left="50"/>
            </HBox.margin>
            <MenuBar styleClass="modern-menu-bar">
               <Menu text="â‰¡" styleClass="modern-menu">
                  <MenuItem fx:id="profileButton" text="Profile" styleClass="menu-item" onAction="#switchToProfile"/>
                  <MenuItem fx:id="logoffButton" text="Logoff" styleClass="menu-item" onAction="#logoff"/>
               </Menu>
            </MenuBar>
            <Button fx:id="dashboardButton" text="My Dashboard" styleClass="modern-nav-button" onAction="#switchToPrimary"/>
            <Button fx:id="leaderboardsButton" text="Leaderboards" styleClass="modern-nav-button" onAction="#switchToLeaderboard"/>
            <Button fx:id="budgetButton" text="Update Budget" styleClass="modern-nav-button-active" onAction="#switchToSecondary"/>
            <Button fx:id="storeButton" text="Exchange Store" styleClass="modern-nav-button" onAction="#switchToStore"/>
         </HBox>
      </VBox>
   </top>

   <center>
      <VBox spacing="30" alignment="TOP_CENTER">
         <!-- Header -->
         <Label fx:id="profileTitle" styleClass="big-heading" />

         <!-- Summary Cards -->
         <HBox spacing="30" alignment="CENTER">
            <VBox spacing="10" styleClass="summary-card">
               <Label text="Total Points" styleClass="section-title" />
               <Label fx:id="pointsLabel" styleClass="highlight-number" />
            </VBox>
            <VBox spacing="10" styleClass="summary-card">
               <Label text="Gems" styleClass="section-title" />
               <Label fx:id="gemsLabel" styleClass="highlight-number" />
            </VBox>
            <VBox spacing="10" styleClass="summary-card">
               <Label text="Current League" styleClass="section-title" />
               <HBox spacing="8" alignment="CENTER">
                  <FontIcon fx:id="leagueIcon" iconSize="18" />
                  <Label fx:id="leagueLabel" styleClass="stats-text" />
               </HBox>
            </VBox>

             <!-- Top 3 Badges -->
            <VBox spacing="10" alignment="CENTER" styleClass="summary-card">
               <Label text="Top 3 Badges" styleClass="section-title" />
               <HBox fx:id="badgeBox" spacing="10" alignment="CENTER" />
            </VBox>

            <!-- Most Recent Badge Earned  -->
            <VBox spacing="10" alignment="CENTER" styleClass="summary-card">
               <Label text="Recent Badge Earned" styleClass="section-title" />
               <HBox fx:id="recentBadgeLabel" alignment="CENTER" spacing="6" />
            </VBox>
         </HBox>

         <!-- Full Badge Gallery -->
         <VBox spacing="10" alignment="CENTER" styleClass="summary-card">
            <Label text="Badge Gallery" styleClass="section-title" />
            <FlowPane fx:id="badgeGallery" hgap="10" vgap="10" styleClass="badge-gallery" />
         </VBox>

         <!-- Income and Expense Lists -->
         <HBox spacing="30" alignment="CENTER">
            <VBox spacing="10" styleClass="summary-card">
               <Label text="Income Sources" styleClass="section-title" />
               <ListView fx:id="incomeList" styleClass="modern-list" prefHeight="200" />
            </VBox>
            <VBox spacing="10" styleClass="summary-card">
               <Label text="Expense Sources" styleClass="section-title" />
               <ListView fx:id="expenseList" styleClass="modern-list" prefHeight="200" />
            </VBox>
         </HBox>
      </VBox>
   </center>
</BorderPane>
