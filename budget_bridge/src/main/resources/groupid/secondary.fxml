<BorderPane stylesheets="@style.css" fx:controller="groupid.SecondaryController" xmlns:fx="http://javafx.com/fxml/1" styleClass="background">
   <top>
      <VBox alignment="CENTER">
         <BorderPane.margin>
            <Insets top="20" right="20" bottom="20" left="20"/>
         </BorderPane.margin>
         <HBox spacing="15">
            <HBox.margin>
               <Insets top="0" right="50" bottom="0" left="50"/>
            </HBox.margin>
            <MenuBar styleClass="modern-menu-bar">
               <Menu text="â‰¡" styleClass="modern-menu">
                  <MenuItem fx:id="profileButton" text="Profile" styleClass="menu-item" onAction="#switchToProfile"/>
                  <MenuItem fx:id="settingsButton" text="Settings" styleClass="menu-item" onAction="#switchToSettings"/>
                  <MenuItem fx:id="tutorialButton" text="Tutorial" styleClass="menu-item" onAction="#switchToTutorial"/>
                  <MenuItem fx:id="logoffButton" text="Logoff" styleClass="menu-item" onAction="#logoff"/>
               </Menu>
            </MenuBar>
            <Button fx:id="dashboardButton" text="My dashboard" styleClass="modern-flat-button" onAction="#switchToPrimary"/>
            <Button fx:id="leaderboardsButton" text="Leaderboards" styleClass="modern-flat-button" onAction="#switchToLeaderboard"/>
            <Button fx:id="budgetButton" text="Update Budget" styleClass="modern-flat-button" onAction="#switchToSecondary"/>
            <Button fx:id="storeButton" text="Exchange Store" styleClass="modern-flat-button" onAction="#switchToStore"/>
         </HBox>
      </VBox>
   </top>

   <bottom>
      <VBox alignment="BOTTOM_LEFT">
         <HBox>
            <Label fx:id="missionDaily" styleClass="norm-text"/>
            <Button fx:id="dailyRewardButton" text="Claim Rewards" onAction="#dailyRewards"/>
         </HBox>
         <HBox>
            <Label fx:id="missionWeekly" styleClass="norm-text"/>
            <Button fx:id="weeklyRewardButton" text="Claim Rewards" onAction="#weeklyRewards"/>
         </HBox>
         <HBox>
            <Label fx:id="missionMonthly" styleClass="norm-text"/>
            <Button fx:id="monthlyRewardButton" text="Claim Rewards" onAction="#monthlyRewards"/>
         </HBox>
      </VBox>
   </bottom>

   <left>
      <Label text="INCOMES" styleClass="norm-text"/>
      <VBox>
         <TextField fx:id="incomeTypeInput" promptText="Please enter an income item" />
         <TextField fx:id="incomeAmountInput" promptText="Please enter an income amount" />
         <Button text="Add" onAction="#addInputIncome" />
         <ListView fx:id="incomeList"/>
      </VBox>
   </left>
   <right>
         <Label text="EXPENSES" styleClass="norm-text"/>
         <VBox>
            <TextField fx:id="expenseTypeInput" promptText="Please enter an expense item" />
            <TextField fx:id="expenseAmountInput" promptText="Please enter an expense amount" />
            <Button text="Add" onAction="#addInputExpense" />
            <ListView fx:id="expenseList" />
         </VBox>
   </right>
</BorderPane>
